#set($jsfiles = ["$StringUtil.getContextPath()/dwr/interface/PlSaleDwr.js?t=2012010261130.js"])
#set($cond = $form.condition)
#set($status = $!cond.get('status'))
<form id="frm" name="frm" method="post">
	<input type="hidden" id="user_action" name="user_action" value=""/>
	<input type='hidden' id="status" name='status'  value="$!status"/>
    <table class="title">
    	<tr><td>代销修改#if($!form.message)[<font color='red'>$!form.message</font>]#end</td></tr>
    </table>
    <table class="control">
    	<tr>
			<td>
				<input type='button' value='新增' class='btn' id='btnAdd' $RightUtil.able($session, '08031001','1')>
				<input type='button' value='删除' class='btn' id='btnDelete' $RightUtil.able($session, '08031001','2')>
				<input type='button' value='查询' class='btn' id='btnSearch' $RightUtil.able($session, '08031001','3')>
				<input type='checkbox' id='allBill' name="allBill" onchange="showAllBill(this)" #if("$!status" == "all")checked#end/>显示所有单据
				<input type='button' value='导出Excel' class='btn' id='exportToExcel' onclick="exportListToExcel()" $RightUtil.able($session, '08031001','4')>
			</td>
		</tr>
    </table>
	<div class="scroll">
    <table class='list' style="width:1500px;">
    	<thead>
			<tr>
                <th width='45px'><input type='checkbox' id='chkall'/></th>
				<th width="60px">状态</th>
                <th width="120px">单据编号</th>
        		<th width="180px">组织</th>
				<th width="180px">供应商</th>
        		<th width="60px">仓库</th>
				<th width="90px">单据日期</th>
				<th width="60px">件数合计</th>
				<th width="60px">重量合计</th>
				<th width="60px">粒数合计</th>
				<th width="60px">金额合计</th>
        		<th width="120px">创建时间</th>
        		<th width="90px">创建人</th>
				<th width="90px">修改人</th>
        		<th width="120px">修改时间</th>
            </tr>
        </thead>
        <tbody id="tbl">
		#foreach($map in $form.pager.pageData)
			<tr>
				<td><input type='checkbox' name='chk'/>$velocityCounter</td>
				<td><a href="javascript:viewReviewLog('PLSALE', '$!{map.billid}')">$!DictUtil.getValue('status', $!map.status)</a></td>
				<td><a href='javascript:toEditPage($!{map.billid});'>$!{map.billno}</a></td>
				<td>$!BdCommon.getOrgName($!map.orgId)</td>
				<td><input type='text' readonly class='none' value="$!BdCommon.getVendorName($!map.vendorId)" style='width:180px;'></td>
				<td>$!DictUtil.getValue('invcode', $!map.stockId)</td>
                <td>$!map.dodate</td>
				<td>$!map.sumCount</td>
				<td>$!map.sumWeight</td>
				<td>$!map.sumGrains</td>
				<td>$!map.sumMoney</td>
				<td>$!map.createDate</td>
				<td>$!BdCommon.getUserName($!map.createId)
					<input type="hidden" name="status_list" value="$!map.status"/>
					<input type="hidden" name="billid" value="$!map.billid"/>
				</td>
				<td>$!BdCommon.getUserName($!map.updateId)</td>
				<td>$!map.updateDate</td>
			</tr>
		#end
    	</tbody>
    </table></div>
<script>
createPagingToolbar('frm', $!form.pager.start, $!form.pager.limit, $!form.pager.totalCount);
</script>
</form>
<script>

function setValues(){
	var dw = jQuery(document).width();
	if(dw > 1500){
		jQuery(".list").css("width", dw+"px");
	}
}

function disableDeleteBtn(checked, index){
	jQuery("#btnDelete").attr("disabled", true);
	if(checked ){
		if($n("status_list")[index].value==="1"){
			jQuery("#btnDelete").attr("disabled", false);
		}
	}
}
jQuery(function(){
	initQuery2("plsale01", "frm", "btnSearch");
	checkTable('tbl', 'chkall', 'chk', false, disableDeleteBtn, function(index){
    	window.location = "plSale.vm?user_action=toEdit&billid=" + $n("billid")[index].value;
    });
	
	jQuery("#btnAdd").click(function(){
		window.location = "plSale.vm?user_action=toEdit";
	});
	
	setValues();
	
	jQuery("#btnDelete").click(deleteProExit);
	
});
function toEditPage(billid){
	window.location = "plSale.vm?user_action=toEdit&billid=" + billid;
}

function deleteProExit(){
	var selRow = getSelectIndex("chk");
	if(selRow == -1){
		alert("请选择要删除的单据");
	} else {
		var status = $n("status_list")[selRow].value;
		if(status && status == "1"){
        	confirm("确定删除?", function(){
				showLayer(true);
    			PlSaleDwr.deletePlSale($n("billid")[selRow].value, function(msg){
    				showLayer(false);
    				if(msg){
    					alert(msg);
    				} else {
    					alert("删除成功", function(){
    						jQuery("#frm").submit();
    					});
    				}
    			});
        	});
    	} else {
    		alert("不允许删除");
    	}
	}
}
function showAllBill(obj) {
	if(obj.checked){
		jQuery("#status").val("all");
	} else {
		jQuery("#status").val("");
	}
	jQuery("#frm").submit();
}
function exportListToExcel(){
	jQuery("#user_action").val("exportExcel");
	jQuery("#frm").submit();
	jQuery("#user_action").val("");
}

</script>
