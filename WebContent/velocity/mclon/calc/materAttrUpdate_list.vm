<form id="myForm" method="post">
	<input type='hidden' id='user_action' name='user_action' value='doPerform'/>
	<input type='hidden' name='id' id="id"/>
	<input type='hidden' name='statusF' id="statusF"/>
	<table class="title">
		<tr>
			<td >
				<tr><td>饰品属性修改</td></tr>
            </td>
        </tr>
    </table>
	<table class="control">
    	<tr>
			<td>
				<input type='button' value='新增' class='btn' id='btnAdd' $RightUtil.able($session, '08021001','1')>
				<input type='button' value='修改/查看' class='btn' onclick='update()'  $RightUtil.able($session, '08021001','2')>
				<input type='button' value='删除' class='btn' onclick='deleteLine()'  $RightUtil.able($session, '08021001','3')>
				<input type='button' value='查询' class='btn' id="btnQueryShow"  $RightUtil.able($session, '08021001','4')>
				<input type='button' value='导出Excel' class='btn' id='exportToExcel' onclick="exportListToExcel()"  $RightUtil.able($session, '08021001','5')>
				<input type='button' value='关闭' class='btn' onclick='closeLine()'  $RightUtil.able($session, '08021001','6')>
				<input type='checkbox' id='stateId' name="stateId" onchange="executeQuery()" >显示所有状态</input>&nbsp;&nbsp;&nbsp;
				#if($!form.successfulFlag)[<font color='blue'>$!form.message</font>]#else[<font color='red'>$!form.message</font>]#end
			</td>
		</tr>
    </table>
	<div class="scroll">
	    <table class='list' style="width:1300px;">
    	<thead>
			<tr>
                <th width='45px'><input type='checkbox' id='chkall'/></th>
                <th width='90px'>状态</th>
        		<th width='120px'>单据编号</th>
        		<th width='90px'>饰品编码</th>
        		<th width='180px'>组织</th>
				<th width='180px'>修改原因</th>
				<th width='120px'>创建时间</th>
        		<th width='90px'>创建人</th>
        		<th width='120px'>修改时间</th>
        		<th width='90px'>修改人</th>
            </tr>
        </thead>
        <tbody id="tbl">
		#foreach($map in $form.pager.pageData)
			<tr>
				<td><input type='checkbox' name='chk' value="$!{map.billid}"/>
					<input type='hidden' name='status' value='$!{map.status}'/>
					<input type='hidden' name='billid' value='$!{map.billid}'/>
					$velocityCounter</td>
                <td><a href="javascript:viewReviewLog('XG', '$!{map.billid}')">$!DictUtil.getValue('status', $!map.status)</a></td>
				<td>$!map.billno</td>
				<td>$!map.ornacode</td>
				<td>$!BdCommon.getOrgName($!map.orgid)</td>
				<td><input type='text' readonly class='none' value="$!map.updatereason" style='width:180px;'></td>
				<td>$!map.createdate</td>
				<td>$!BdCommon.getUserName($!map.createid)</td>
				<td>$!map.updatedate</td>
				<td>$!BdCommon.getUserName($!map.updateid)</td> 
			</tr>
		#end
    	</tbody>
    </table>
        </div>
<script>
createPagingToolbar('frm', $!form.pager.start, $!form.pager.limit, $!form.pager.totalCount);
</script>
</form>
<script>
/**
 * 查询
 */
function executeQuery(){
	jQuery("#user_action").val("doPerform");
	jQuery("#myForm").submit();
}
jQuery(function(){
	checkTable('tbl', 'chkall', 'chk', false,null, function(index){
		window.location = "materAttrUpdate.vm?user_action=toEditMaterAttrUpdate&id=" + $n("chk")[index].value;
	});
	//initQuery("btnQueryShow", "btnQueryCancel");
	initQuery2("XG01", 'myForm', 'btnQueryShow');
	jQuery("#stateId")[0].checked= "$!form.condition.stateId"=="on"?true:false;
	
	jQuery("#btnAdd").click(function(){
		window.location = "materAttrUpdate.vm?user_action=toEditMaterAttrUpdate";
	});
});
function update(){
	var index = getSelectIndexs('chk');
	if(index.length!=1){
		alert("请选择一行");
		return;
	}
	var id = $n("chk")[index[0]].value;
	var status = $n("status")[index[0]].value;
	window.location = "materAttrUpdate.vm?user_action=toEditMaterAttrUpdate&id=" +id;

}
function toEditPage(id){
	window.location = "materAttrUpdate.vm?user_action=toEditMaterAttrUpdate&id=" + id;
}
function closeLine(){
	var index = getSelectIndexs('chk');
	if(index.length!=1){
		alert("请选择一行");
		return;
	}
	var id = $n("chk")[index[0]].value;
	var status = $n("status")[index[0]].value;
	if(status!="5"){
		alert("状态必须为审核完成");
		return;
	}
	confirm("确定关闭?", function(){
		//window.location = "materAttrUpdate.vm?user_action=changeMaterAttrUpdateStatus&id=" + id + "&status=8";
		jQuery("#id").val(id);
		jQuery("#statusF").val("8");
    	jQuery("#user_action").val("changeMaterAttrUpdateStatus");
    	jQuery("#myForm").submit();
    	jQuery("#user_action").val("");
	});
}
function deleteLine(){
	var index = getSelectIndexs('chk');
	if(index.length!=1){
		alert("请选择一行");
		return;
	}
	var s = $n("status")[index[0]].value;
	var id = $n("chk")[index[0]].value;
	if(s!="1"){
		alert("状态必须为保存");
		return;
	}
	confirm("确定删除?", function(){
		jQuery("#id").val(id);
    	jQuery("#user_action").val("deleteMaterAttrUpdate");
    	jQuery("#myForm").submit();
    	jQuery("#user_action").val("");
	});
}
function exportListToExcel(){
	jQuery("#user_action").val("exportExcel");
	jQuery("#myForm").submit();
	jQuery("#user_action").val("");
}
</script>