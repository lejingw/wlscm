#set($jsfiles = ["$StringUtil.getContextPath()/dwr/interface/SbraTypeDwr.js"])

<form id="myForm" method="post">
	<input type='hidden' id='user_action' name='user_action' value=''/>
    <table class="title">
    	<tr><td>配件类型#if($!form.message)[<font color='red'>$!form.message</font>]#end</td></tr>
    </table>
	<div id="queryDiv">
        <table class="control">
        	<tr>
        		<td>
        			<input type='button' value='确定' id='btnQueryOk'>
        			<input type='button' value='重置' id='btnQueryReset'>
        			<input type='button' value='取消' id='btnQueryCancel'>
        		</td>
        	</tr>
        </table>
        <table class='content'>
			<tr>
        		<td class="body1">配件类型</td>
        		<td class='body2'>
					<input type='text' id='sbraType' name='sbraType' value="$!{form.condition.sbraType}"/>
				</td>
            </tr>
        </table>
    </div>
    <table class="control">
    	<tr>
			<td>
				<input type='button' value='新增' class='btn' id='btnAdd' $RightUtil.able($session, '08061001','1')>
				<input type='button' value='删除' class='btn' onclick='deleteLine()'  $RightUtil.able($session, '08061001','2')>
				<input type='button' value='查询' class='btn' id="btnQueryShow"  $RightUtil.able($session, '08061001','3')>
				<input type='button' value='导出Excel' class='btn' id='exportToExcel' onclick="exportListToExcel()"  $RightUtil.able($session, '08061001','4')>
			</td>
		</tr>
    </table>
	<div class="scroll">
	    <table class='list' >
    	<thead>
			<tr>
                <th width='45px'><input type='checkbox' id='chkall'/></th>
                <th width='90px'>配件类型</th>
				<th width='60px'>其它系数</th>
        		<th width='60px'>是否封存</th>
        		<th width='60px'>是否工费</th>
        		<th width='120px'>创建时间</th>
        		<th width='90px'>创建人</th>
        		<th width='120px'>修改时间</th>
        		<th width='90px'>修改人</th>
            </tr>
        </thead>
        <tbody id="tbl">
		#foreach($map in $form.pager.pageData)
			<tr>
				<td><input type='checkbox' name='chk' value="$!{map.id}"/>$velocityCounter</td>
				<td><a href='javascript:toEditPage($!{map.id});'>$!{map.sbraType}</a></td>
				<td>$!map.coefficient</td>
				<td>$!DictUtil.getValue('yesorno', $!map.archiveFlag)</td>
				<td>$!DictUtil.getValue('yesorno', $!map.isFee)</td>
				<td>$!map.createDate</td>
				<td>$!BdCommon.getUserName($!map.createUserId)</td>
				<td>$!map.updateDate</td>
				<td>$!BdCommon.getUserName($!map.updateUserId)</td>
			</tr>
		#end
    	</tbody>
    </table>
    </div>
<script>
createPagingToolbar('frm', $!form.pager.start, $!form.pager.limit, $!form.pager.totalCount);
</script>
</form>
<script>
function executeQuery(){
	jQuery("#myForm").submit();
}
function resetQuery(){
	jQuery("#sbraType").val("");
}
jQuery(function(){
	checkTable('tbl', 'chkall', 'chk', false,null, function(index){
		window.location = "sbraType.vm?user_action=toEdit&id=" + $n("chk")[index].value;
	});
	//initQuery("btnQueryShow", "btnQueryCancel");
	initQuery2("PJ01", 'myForm', 'btnQueryShow');
	jQuery("#btnQueryOk").click(executeQuery);
	jQuery("#btnQueryReset").click(resetQuery);
	
	jQuery("#btnAdd").click(function(){
		window.location = "sbraType.vm?user_action=toEdit";
	});
});
function toEditPage(id){
	window.location = "sbraType.vm?user_action=toEdit&id=" + id;
}
function deleteBillnoRule(id){
	confirm("确定删除?", function(){
		SbraTypeDwr.deleteSbraType(id, function(errMsg){
			if(errMsg){
				alert(errMsg);
			}else{
				alert("删除成功", function(){
        			window.location = "sbraType.vm";
				});
			}
		});
	});
}
function deleteLine(){
	var index = getSelectIndexs('chk');
	if(index.length!=1){
		alert("请选择一行");
		return;
	}
	var id = $n("chk")[index[0]].value;
	confirm("确定删除?", function(){
		SbraTypeDwr.deleteSbraType(id, function(errMsg){
			if(errMsg){
				alert(errMsg);
			}else{
				alert("删除成功", function(){
        			window.location = "sbraType.vm";
				});
			}
		});
	});
}
function exportListToExcel(){
	jQuery("#user_action").val("exportExcel");
	jQuery("#myForm").submit();
	//user_action改回之前的值，否则之后的任何提交如果不重新设置user_action，则都将是导出excel，比如上下翻页
	jQuery("#user_action").val("");
}
</script>