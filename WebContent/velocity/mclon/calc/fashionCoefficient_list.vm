<form id="myForm" method="post">
	<input type='hidden' id='user_action' name='user_action' value=''/>
	<table class="title">
		<tr>
			<td >
				<tr><td>黄金系数#if($!form.message)[<font color='blue'>$!form.message</font>]#else[<font color='red'>$!form.message</font>]#end</td></tr>
            </td>
        </tr>
    </table>
	<div id="queryDiv">
        <table class="control">
        	<tr>
        		<td>
        			<input type='button' value='确定' id='btnQueryOk'>
        			<input type='button' value='重置' id='btnQueryReset'>
        			<input type='button' value='取消' id='btnQueryCancel'>
        		</td>
        	</tr>
        </table>
        <table class='content'>
			<tr>
        		<td class="body1">启始重量</td>
        		<td class='body2'><input type='text' id='beginWeight' name='beginWeight' value="$!{form.condition.beginWeight}"/></td>
    			<td class="body1">截止重量</td>
        		<td class='body2'><input type='text' id='endWeight' name='endWeight' value="$!{form.condition.endWeight}"/></td>
            </tr>
			<tr>
        		<td class="body1">大类</td>
        		<td class='body2'>
					<select id="itemClassId" name="itemClassId">$StringUtil.emptyOption()</select>
				</td>
        	</tr>
        </table>
    </div>
	<table class="control">
    	<tr>
			<td>
				<input type='button' value='新增' class='btn' id='btnAdd' $RightUtil.able($session, '08061101','1')>
				<input type='button' value='删除' class='btn' onclick='deleteLine()'  $RightUtil.able($session, '08061101','2')>
				<input type='button' value='查询' class='btn' id="btnQueryShow"  $RightUtil.able($session, '08061101','3')>
				<input type='button' value='导出Excel' class='btn' id='exportToExcel' onclick="exportListToExcel()"  $RightUtil.able($session, '08061101','4')>
			</td>
		</tr>
    </table>
	<div class="scroll">
	    <table class='list' style="width:1100px;">
    	<thead>
			<tr>
                <th width='45px'><input type='checkbox' id='chkall'/></th>
				<th width='90px'>大类</th>
        		<th width='90px'>起始总成本</th>
				<th width='90px'>截止总成本</th>
				<th width='60px'>系数</th>
				<th width='60px'>状态</th>
				<th width='180px'>备注</th>
				<th width='120px'>创建时间</th>
        		<th width='90px'>创建人</th>
        		<th width='120px'>修改时间</th>
        		<th width='90px'>修改人</th>
            </tr>
        </thead>
        <tbody id="tbl">
		#foreach($map in $form.pager.pageData)
			<tr>
				<td><input type='checkbox' name='chk' value="$!{map.fashId}"/>$velocityCounter</td>
				<td><a href='javascript:toEditPage($!{map.fashId});'>$!BdCommon.getItemClassDesc($!map.itemClassId)</a></td>
				<td>$!map.priceStr</td>
				<td>$!map.priceEnd</td>
				<td>$!map.coefficient</td>
				<td>$!DictUtil.getValue('status',$!map.status)</td>
				<td><input type='text' readonly class='none' value="$!map.memo" style='width:180px;'></td>
				<td>$!map.createDate</td>
				<td>$!BdCommon.getUserName($!map.createId)</td>
				<td>$!map.updateDate</td>
				<td>$!BdCommon.getUserName($!map.updateId)</td> 
			</tr>
		#end
    	</tbody>
    </table>
    </div>
<script>
createPagingToolbar('frm', $!form.pager.start, $!form.pager.limit, $!form.pager.totalCount);
</script>
</form>
<script>
function executeQuery(){
	if(!isDecimal(jQuery("#beginWeight").val())&&""!=jQuery("#beginWeight").val()){
		alert('启始重量必须为数字');
		return;
	}if(!isDecimal(jQuery("#endWeight").val())&&""!=jQuery("#endWeight").val()){
		alert('截止重量必须为数字');
		return;
	}if(parseFloat(jQuery("#beginWeight").val())>=jQuery("#endWeight").val()
		&&""!=jQuery("#endWeight").val()&&""!=jQuery("#beginWeight").val()){
		alert('截止重量必须大于启始重量');
		return;
	}
	jQuery("#myForm").submit();
}
function resetQuery(){
	jQuery("#itemClassId").val("");
	jQuery("#qualityId").val("");
	jQuery("#beginWeight").val("");
	jQuery("#endWeight").val("");
}
jQuery(function(){
	checkTable('tbl', 'chkall', 'chk', false,null, function(index){
		window.location = "fashionCoefficient.vm?user_action=toEditFashionCoefficient&id=" + $n("chk")[index].value;
	});
	//initQuery("btnQueryShow", "btnQueryCancel");
	initQuery2("SS01", 'myForm', 'btnQueryShow');
	jQuery("#btnQueryOk").click(executeQuery);
	jQuery("#btnQueryReset").click(resetQuery);
	
	jQuery("#btnAdd").click(function(){
		window.location = "fashionCoefficient.vm?user_action=toEditFashionCoefficient";
	});
	BdCommonDwr.getAllItemClassForSlt(function(data){
		addOptions("itemClassId", data);
		selectOption("itemClassId", "$!{form.condition.itemClassId}");
	});
	
});
function toEditPage(id){
	window.location = "fashionCoefficient.vm?user_action=toEditFashionCoefficient&id=" + id;
}
function deleteFashionCoefficient(id){
	confirm("确定删除?", function(){
		window.location = "fashionCoefficient.vm?user_action=deleteFashionCoefficient&id=" + id;
	});
}
function deleteLine(){
	var index = getSelectIndexs('chk');
	if(index.length!=1){
		alert("请选择一行");
		return;
	}
	var id = $n("chk")[index[0]].value;
	confirm("确定删除?", function(){
		window.location = "fashionCoefficient.vm?user_action=deleteFashionCoefficient&id=" + id;
	});
}
function exportListToExcel(){
	jQuery("#user_action").val("exportExcel");
	jQuery("#myForm").submit();
	//user_action改回之前的值，否则之后的任何提交如果不重新设置user_action，则都将是导出excel，比如上下翻页
	jQuery("#user_action").val("");
}
</script>