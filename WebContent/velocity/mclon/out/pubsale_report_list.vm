#set($jsfiles = ["$StringUtil.getContextPath()/js/out/pubSale.js",
"$StringUtil.getContextPath()/script/mclon/calendar/calendar.js",
"$StringUtil.getContextPath()/dwr/interface/OutVendorDwr.js"])
#set($cssfiles = ["$StringUtil.getContextPath()/script/mclon/calendar/calendar.css"])

<form id="frm" method="post" action="outVendor.vm">
    <table class="title">
    	<tr><td>对公销售单#if($!form.message)[<font color='red'>$!form.message</font>]#end</td></tr>
    </table>
	<input type='hidden' id='user_action' name='user_action' value='toPubSaleReportList'/>
	<input type='hidden' id='type' name='type' value="$!form.condition.get('type')"/>
    
	<div class="scroll">
	    <table class='list' style="width:1600px;">
    	<thead>
			<tr>
                <th width='45px'><input type='checkbox' id='chkall'/></th>
				<th width='60px'>状态</th>
                <th width='90px'>总单编号</th>
        		<th width='180px'>供应商</th>
				<th width='180px'>库存组织</th>
				<th width='90px'>仓库</th>
        		<th width='120px'>单据日期</th>
        		<th width='60px'>总件数</th>
        		<th width='60px'>总重量</th>
        		<th width='60px'>总粒数</th>
        		<th width='60px'>总金额</th>
        		<th width='120px'>创建时间</th>
        		<th width='90px'>创建人</th>
        		<th width='120px'>修改时间</th>
        		<th width='90px'>修改人</th>
            </tr>
        </thead>
        <tbody id="tbl">
		#foreach($map in $form.pager.pageData)
			<tr>
				<td>
					<input type='checkbox' value="$!{map.headId}" name='chk'/>$velocityCounter
				</td>
				<td><input type='hidden' name='statusHid' value='$!{map.status}'/><a href="">$!DictUtil.getValue('status', $!map.status)</a></td>
				<td><a href=''>$!map.billNo</a></td>
				<td><input type='text' readonly class='none' style="width:180px;" value="$!BdCommon.getVendorName($!map.vendorId)"></td>
				<td>$!BdCommon.getOrgName($map.orgId)</td>
				<td>$!DictUtil.getValue('invcode', $!map.stockId)</td>
				<td>$!map.doDate</td>
				<td>$!map.sumCount</td>
				<td>$!StringUtil.formatDouble($!map.sumWeight,2)</td>
				<td>$!map.sumGrains</td>
				<td>$!StringUtil.formatDouble($!map.sumMoney,2)</td>
				<td>$!map.createDate</td>
				<td>$!BdCommon.getUserName($!map.createId)</td>
				<td>$!map.updateDate</td>
				<td>$!BdCommon.getUserName($!map.updateId)</td>
			</tr>
		#end
    	</tbody>
    </table>
    </div>
<script>
createPagingToolbar('frm', $!form.pager.start, $!form.pager.limit, $!form.pager.totalCount);
</script>


</form>
	
<script>
jQuery(function(){
	checkTable('tbl', 'chkall', 'chk', false, changeButtons, function(index){
	});
});
</script>