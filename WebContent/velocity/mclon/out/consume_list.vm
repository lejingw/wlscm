#set($jsfiles = ["$StringUtil.getContextPath()/dwr/interface/ConsumeDwr.js"])
#set($cond = $form.condition)
#set($status = $!cond.get('status'))
<form id="myForm" method="post">
	<input type='hidden' id='user_action' name='user_action' value='doPerform'/>
	<input type='hidden' name='id' id="id"/>
	<input type='hidden' id="status" name='status' value="$!status"/>
	<table class="title">
		<tr>
			<td >
				<tr><td>维修耗料单</td></tr>
            </td>
        </tr>
    </table>
	<table class="control">
    	<tr>
			<td>
				<input type='button' value='新增' class='btn' id='btnAdd' $RightUtil.able($session, '08041001','1')>
				<input type='button' value='删除' class='btn' onclick='deleteLine()'  $RightUtil.able($session, '08041001','3')>
				<input type='button' value='查询' class='btn' id="btnQueryShow"  $RightUtil.able($session, '08041001','4')>
				<input type='button' value='导出Excel' class='btn' id='exportToExcel' onclick="exportListToExcel()"  $RightUtil.able($session, '08041001','5')>
				<input type='checkbox' #if("$!status" == "all")checked#end onchange="showAllBill(this)" >显示所有状态</input>
			</td>
		</tr>
    </table>
	<div class="scroll">
	    <table class='list' style="width:1400px;">
    	<thead>
			<tr>
                <th width='45px'><input type='checkbox' id='chkall'/></th>
                <th width='90px'>状态</th>
        		<th width='120px'>单据编号</th>
        		<th width='180px'>组织</th>
				<th width='90px'>业务时间</th>
        		<th width='180px'>供应商</th>
				<th width='90px'>金额</th>
				<th width='120px'>创建时间</th>
        		<th width='90px'>创建人</th>
        		<th width='120px'>修改时间</th>
        		<th width='90px'>修改人</th>
            </tr>
        </thead>
        <tbody id="tbl">
		#foreach($map in $form.pager.pageData)
			<tr>
				<td>
					<input type='checkbox' name='chk' value="$!{map.billid}"/>
					$velocityCounter
				</td>
                <td><a href="javascript:viewReviewLog('HL', '$!{map.billid}')">$!DictUtil.getValue('status', $!map.status)</a></td>
				<td><a href='javascript:toEditPage($!{map.billid});'>$!{map.billno}</a></td>
				<td>$!BdCommon.getOrgName($!map.orgId)</td>
				<td>$!map.dodate</td>
				<td>$!BdCommon.getVendorName($!map.vendorId)</td>
				<td>$!map.amount</td>
				<td>$!map.createDate</td>
				<td>$!BdCommon.getUserName($!map.createId)</td>
				<td>$!map.updateDate</td>
				<td>$!BdCommon.getUserName($!map.updateId)
					<input type='hidden' name='status_list' value='$!{map.status}'/>
					<input type='hidden' name='billid' value='$!{map.billid}'/>
				</td> 
			</tr>
		#end
    	</tbody>
    </table>
        </div>
<script>
createPagingToolbar('myForm', $!form.pager.start, $!form.pager.limit, $!form.pager.totalCount);
</script>
</form>
<script>

jQuery(function(){
	checkTable('tbl', 'chkall', 'chk', false,null, function(index){
		window.location = "consum.vm?user_action=toEditConsum&billid=" + $n("chk")[index].value;
	});
	initQuery2("XG01", 'myForm', 'btnQueryShow');
	
	jQuery("#btnAdd").click(function(){
		window.location = "consum.vm?user_action=toEditConsum";
	});
});

function toEditPage(id){
	window.location = "consum.vm?user_action=toEditConsum&billid=" + id;
}

function deleteLine(){
	var index = getSelectIndexs('chk');
	if(index.length!=1){
		alert("请选择一行");
		return;
	}
	var s = $n("status_list")[index[0]].value;
	var id = $n("chk")[index[0]].value;
	if(s!="1"){
		alert("状态必须为保存");
		return;
	}
	confirm("确定删除?", function(){	
		showLayer(true);
		ConsumeDwr.deleteConsume(id, function(data){
			showLayer(false);
			if (data) {
				if(data.isSuccess == "true"){
					alert("删除成功", function(){
    						jQuery("#myForm").submit();
    					});
				} else {
					alert(data.msg);
				}
	    	} else {
	    		alert("删除失败");
	    	}
		});
	});
}

function showAllBill(obj) {
	if(obj.checked){
		jQuery("#status").val("all");
	} else {
		jQuery("#status").val("");
	}
	jQuery("#myForm").submit();
}

function exportListToExcel(){
	jQuery("#user_action").val("exportExcel");
	jQuery("#myForm").submit();
	jQuery("#user_action").val("");
}
</script>