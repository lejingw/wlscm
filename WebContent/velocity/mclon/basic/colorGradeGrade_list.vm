#set($jsfiles = ["$StringUtil.getContextPath()/js/basic/colorGradeGrade.js"])
<form  id="myForm" method="post" action="colorGradeGrade.vm">
	<input type='hidden' id='user_action' name='user_action' value=''/>
	<table class="title">
		<tr>
			<td >
				<tr><td>色级品质#if($!form.message)[<font color='blue'>$!form.message</font>]#else[<font color='red'>$!form.message</font>]#end</td></tr>
            </td>
        </tr>
    </table>
	<div id="queryDiv">
        <table class="control">
        	<tr>
        		<td>
        			<input type='button' value='确定' id='btnQueryOk'>
        			<input type='button' value='重置' id='btnQueryReset'>
        			<input type='button' value='取消' id='btnQueryCancel'>
        		</td>
        	</tr>
        </table>
        <table class='content'>
			<tr>
        		<td class="body1">颜色</td>
        		<td class='body2'>
					<select id="colorGradeId" name="colorGradeId">$StringUtil.emptyOption()</select>
				</td>
        		<td class="body1">品质</td>
        		<td class='body2'>
					<select id="gradeId" name="gradeId">$StringUtil.emptyOption()</select>
                </td>
        	</tr>
        </table>
    </div>
	<table class="control">
    	<tr>
			<td>
				<input type='button' value='新增' class='btn' id='btnAdd' $RightUtil.able($session, '08011501','1')>
				<input type='button' value='删除' class='btn' onclick='deleteColorGradeGrade()' $RightUtil.able($session, '08011501','2')>
				<input type='button' value='导出Excel' class='btn' id='exportToExcel' onclick="exportListToExcel()" $RightUtil.able($session, '08011501','3')>
				<input type='button' value='查询' class='btn' id="btnQueryShow"  $RightUtil.able($session, '08011501','4')>
			</td>
		</tr>
    </table>
	<div class="scroll">
	    <table class='list' >
    	<thead>
			<tr>
                <th width='45px'><input type='checkbox' id='chkall'/></th>
                <th width='60px'>状态</th>
                <th width='60px'>色级</th>
				<th width='60px'>品质</th>
				<th width='180px'>备注</th>
				<th width='120px'>创建时间</th>
        		<th width='90px'>创建人</th>
        		<th width='120px'>修改时间</th>
        		<th width='90px'>修改人</th>
            </tr>
        </thead>
        <tbody id="tbl">
		#foreach($map in $form.pager.pageData)
			<tr>
				<td><input type='checkbox' name='chk' value='$!{map.id}'/>$velocityCounter
					<input type='hidden' name='status' value='$!{map.status}'/></td>
				<td>$!DictUtil.getValue('status', $!map.status)</td>
                <td><a href='javascript:toEditPage($!{map.id});'>$!DictUtil.getValue('diacolorgrade',$!map.colorGradeId)</a></td>
                <td>$!DictUtil.getValue('gradelevel',$!map.gradeId)</td>
				<td><input type='text' readonly class='none' value="$!map.memo" style='width:180px;'></td>
				<td>$!map.createDate</td>
				<td>$!BdCommon.getUserName($!map.createId)</td>
				<td>$!map.updateDate</td>
				<td>$!BdCommon.getUserName($!map.updateId)</td>
			</tr>
		#end
    	</tbody>
    </table>
	</div>
<script>
createPagingToolbar('myForm', $!form.pager.start, $!form.pager.limit, $!form.pager.totalCount);
</script>
</form>
<script>
function executeQuery(){
	jQuery("#myForm").submit();
}
function resetQuery(){
	jQuery("#diacolorgrade").val("");
	jQuery("#gradeId").val("");
}
jQuery(function(){
	checkTable('tbl', 'chkall', 'chk', false,null, function(index){
		window.location = "colorGradeGrade.vm?user_action=toEditColorGradeGrade&id=" + $n("chk")[index].value;
	});
	//initQuery("btnQueryShow", "btnQueryCancel");
	initQuery2("SJ01", 'myForm', 'btnQueryShow');
	jQuery("#btnQueryOk").click(executeQuery);
	jQuery("#btnQueryReset").click(resetQuery);
	
	jQuery("#btnAdd").click(function(){
		window.location = "colorGradeGrade.vm?user_action=toEditColorGradeGrade";
	});
	
	DictDwr.getDictsForSlt("diacolorgrade", function(data){
		addOptions("colorGradeId", data, null, null, true, true,"$!form.condition.colorGradeId");
	});
	DictDwr.getDictsForSlt("gradelevel", function(data2){
		addOptions("gradeId", data2, null, null, true, true,"$!form.condition.gradeId");
	});
});
function toEditPage(id){
	window.location = "colorGradeGrade.vm?user_action=toEditColorGradeGrade&id=" + id;
}
</script>