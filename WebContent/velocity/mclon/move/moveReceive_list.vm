<form id="frm" action="moveReceive.vm" method="post">
	<input type='hidden' id='user_action' name='user_action' value=''/>
	<input type='hidden' id="billType" name="billType" value="$!{form.billType}"/>
	<input type='hidden' id="jmFlag" name="jmFlag" value="$!{form.jmFlag}"/>
    <table class="title">
    	<tr>
			<td>$!DictUtil.getValue("movebilltype", $!form.billType)接收
				#if(""!="$!{form.message}")
					[<font color='red'>$!{form.message}</font>]
				#end
			</td>
		</tr>
    </table>
    <table class="control">
    	<tr>
			<td>
				<input type='button' value='接收/查看' class='btn' id='btnReceive' $RightUtil.able($session, $modelCode,'1')>
				<input type='button' value='查询' class='btn' id="btnQueryShow" $RightUtil.able($session, $modelCode,'2')>
				<input type='button' value='导出Excel' class='btn' id='exportToExcel' onclick="exportListToExcel()">
					<input type="checkbox" name='showAllFlag' #if("1" == "$!{form.condition.showAllFlag}") checked #end value='1' onclick="showAllBill('frm')">显示所有单据
			</td>
		</tr>
    </table>
	<div class='scroll'>
    <table class='list' style='width:2000px'>
    	<thead>
			<tr>
				<th width='45px'><input type='checkbox' id='chkall'/></th>
				<th width='60px'>状态</th>
				<th width='120px'>单据编号</th>
			#if("1" == $!{form.billType})
				<th width='90px'>调拨类型</th>
				<th width='90px'>来源单据</th>
				<th width='120px'>来源单据号</th>
			#end
				<th width='180px'>调出组织</th>
				<th width='60px'>调出仓库</th>
				<th width='180px'>调入组织</th>
				<th width='60px'>调入仓库</th>
				<th width='60px'>件数合计</th>
				<th width='60px'>重量合计</th>
				<th width='60px'>接收合计</th>
				<th width='90px'>未接收合计</th>
				<th width='90px'>所有证书合计</th>
				<th width='120px'>装箱单号</th>
				<th width='120px'>创建时间</th>
				<th width='90px'>创建人</th>
				<th width='120px'>修改时间</th>
				<th width='90px'>修改人</th>
            </tr>
        </thead>
        <tbody id="tbl">
		#foreach($item in $form.pager.pageData)
			<tr>
				<td><input type='checkbox' name='chk' value='$!{item.headid}'/>$velocityCounter</td>
				<td><input type='hidden' name='status' value='$!{item.status}'/><a href="javascript:viewReviewLog('${billCode}', '$!{item.headid}')">$!DictUtil.getValue('status', $!item.status)</a></td>
				<td><a href='javascript:toEditPage($!{item.headid});'>$!item.billno</a></td>
			#if("1" == $!{form.billType})
				<td>$!DictUtil.getValue('movetype', $!item.moveType)</td>
				<td>$!DictUtil.getValue('billcode', $!item.srcBillCode)</td>
				<td>$!item.srcBillNo</td>
			#end
				<td>$!BdCommon.getOrgName($!item.outOrgId)</td>
				<td>$!DictUtil.getValue('invcode', $!item.outStockId)</td>
				<td>$!BdCommon.getOrgName($!item.inOrgId)</td>
				<td>$!DictUtil.getValue('invcode', $!item.inStockId)</td>
				<td>$!item.sumCount</td>
				<td>$!StringUtil.formatDouble($!item.sumWeight, 2)</td>
				<td>$!item.receCount</td>
				<td>$!item.noreceCount</td>
				<td>$!item.certCount</td>
				<td>$!item.packNo</td>
				<td>$!item.createDate</td>
				<td>$!BdCommon.getUserName($!item.createId)</td>
				<td>$!item.updateDate</td>
				<td>$!BdCommon.getUserName($!item.updateId)</td>
			</tr>
		#end
    	</tbody>
    </table>
    </div>
<script>
createPagingToolbar('frm', $!form.pager.start, $!form.pager.limit, $!form.pager.totalCount);
</script>
</form>
<script>
function exportListToExcel(){
	jQuery("#user_action").val("exportExcel");
	jQuery("#frm").submit();
	jQuery("#user_action").val("");
}
jQuery(function(){
	checkTable('tbl', 'chkall', 'chk', false, changeButtons, function(index){
		window.location = "moveReceive.vm?user_action=toEdit&headid=" + $n("chk")[index].value;
	});
	
	jQuery("#btnReceive").click(function(){
    	var index = getSelectIndex('chk');
    	if(index<0){
    		alert("请选择要接收/查看的记录");
    		return ;
    	}
		window.location = "moveReceive.vm?user_action=toEdit&headid=" + $n("chk")[index].value;
	});
	initQuery2('${queryCode}', "frm", 'btnQueryShow');
	changeButtons(false);
});
function showAllBill(formId){
	jQuery("#" + formId).submit();
}
function changeButtons(checked, index){
	jQuery("#btnReceive").attr("disabled", true);
	
	if(!checked)	return ;
	jQuery("#btnReceive").attr("disabled", false);
}
function toEditPage(headid){
	window.location = "moveReceive.vm?user_action=toEdit&headid=" + headid;
}
</script>