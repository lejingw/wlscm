        closeable:true,
        boxid:'winDiv',
        onok : function(box) {
            box.close();
        },
        oncancel : function(box) {
            box.close();
        }
    };
    var url = ctxPath + '/move/dispatchWay.vm?user_action=priceDispatchReport';
