#end
<form id="frm" action="moveBill.vm" method="post">
	<input type='hidden' id='user_action' name='user_action' value=''/>
	<input type='hidden' id="billType" name="billType" value="$!{form.billType}"/>
	<input type='hidden' id="jmFlag" name="jmFlag" value="$!{form.jmFlag}"/>
    <table class="title">
    	<tr>
			<td>$!DictUtil.getValue("movebilltype", $!form.billType)
				#if(""!="$!{form.message}")
					[<font color='red'>$!{form.message}</font>]
				#end
			</td>
		</tr>
    </table>
    <table class="control">
    	<tr>
			<td>
				<input type='button' value='新增' class='btn' id='btnAdd' $RightUtil.able($session, $modelCode,'1')>
				<input type='button' value='修改/查看' class='btn' id='btnEdit' $RightUtil.able($session, $modelCode,'2')>
				<input type='button' value='删除' class='btn' id="btnDelete" $RightUtil.able($session, $modelCode,'3')>
			#if("1" == $!{form.billType})
				<input type='button' value='生成加盟销售结算单' class='btn' id="btnGenEstimate" $RightUtil.able($session, $modelCode,'6')>
				<input type='button' value='撤销' class='btn' id="btnCancelMoveBill" $RightUtil.able($session, $modelCode,'7')>
			#else
				<input type='button' value='生成加盟退货结算单' class='btn' id="btnGenEstimate" $RightUtil.able($session, $modelCode,'6')>
			#end
				<input type='button' value='查询' class='btn' id="btnQueryShow" $RightUtil.able($session, $modelCode,'4')>
				<input type='button' value='导出Excel' class='btn' id='exportToExcel' onclick="exportListToExcel()" $RightUtil.able($session, $modelCode,'5')>
				<input type="checkbox" name='showAllFlag' #if("1" == "$!{form.condition.showAllFlag}") checked #end value='1' onclick="showAllBill('frm')">显示所有单据
			</td>
		</tr>
    </table>
	<div class="scroll">
    <table class='list' style='width:2400px;'>
    	<thead>
			<tr>
                <th width='45px'><input type='checkbox' id='chkall'/></th>
        		<th width='90px'>状态</th>
                <th width='120px'>单据编号</th>
                <th width='90px'>业务日期</th>
			#if("1" == $!{form.billType})
                <th width='90px'>调拨类型</th>
                <th width='90px'>来源单据</th>
                <th width='120px'>来源单据号</th>
			#else
                <th width='90px'>是否证照齐全</th>
			#end
                <th width='120px'>结算单号</th>
			#if("2" == $!{form.billType})
                <th width='90px'>48小时退货</th>
			#end
			#if("1" == $!{form.billType})
                <th width='120px'>红字结算单号</th>
			#end
                <th width='180px'>调出组织</th>
                <th width='60px'>调出仓库</th>
                <th width='180px'>调入组织</th>
                <th width='60px'>调入仓库</th>
                <th width='120px'>装箱单号</th>
				<th width='60px'>件数合计</th>
				<th width='60px'>重量合计</th>
				<th width='60px'>接收合计</th>
				<th width='90px'>未接收合计</th>
				<th width='90px'>所有证书合计</th>
        		<th width='120px'>创建时间</th>
        		<th width='90px'>创建人</th>
        		<th width='120px'>修改时间</th>
        		<th width='90px'>修改人</th>
            </tr>
        </thead>
        <tbody id="tbl">
		#foreach($item in $form.pager.pageData)
			<tr>
				<td><input type='checkbox' name='chk' value='$!{item.headid}'/>
					<input type="hidden" name="outOrgId" value="$!item.outOrgId"/>
					<input type="hidden" name="inOrgId" value="$!item.inOrgId"/>
					$velocityCounter</td>
				<td><input type='hidden' name='status' value='$!{item.status}'/><a href="javascript:viewReviewLog('${billCode}', '$!{item.headid}')">$!DictUtil.getValue('status', $!item.status)</a></td>
				<td><a href='javascript:toEditPage($!{item.headid});'>$!item.billno</a></td>
				<td>$!item.dodate</td>
			#if("1" == $!{form.billType})
				<td>$!DictUtil.getValue('movetype', $!item.moveType)</td>
				<td>$!DictUtil.getValue('billcode', $!item.srcBillCode)</td>
				<td>$!item.srcBillNo</td>
			#else
				<td>$!DictUtil.getValue('yesorno', $!item.licenseCompleteFlag)</td>
			#end
				<td><a href='javascript:viewEstimateBill($!{form.billType}, $!item.estimateId);'>$!item.estimateNo</a></td>
			#if("2" == $!{form.billType})
                <td>$!DictUtil.getValue('yesorno', $!item.backIn48Flag)</td>
			#end
			#if("1" == $!{form.billType})
				<td><a href='javascript:viewEstimateBill($!{form.billType}, $!item.redEstimateId);'>$!item.redEstimateNo</a></td>
			#end
				<td>$!BdCommon.getOrgName($!item.outOrgId)</td>
				<td>$!DictUtil.getValue('invcode', $!item.outStockId)</td>
				<td>$!BdCommon.getOrgName($!item.inOrgId)</td>
				<td>$!DictUtil.getValue('invcode', $!item.inStockId)</td>
				<td>$!item.packNo</td>
				<td>$!item.sumCount</td>
				<td>$!StringUtil.formatDouble($!item.sumWeight, 2)</td>
				<td>$!item.receCount</td>
				<td>$!item.noreceCount</td>
				<td>$!item.certCount</td>
				<td>$!item.createDate</td>
				<td>$!BdCommon.getUserName($!item.createId)</td>
				<td>$!item.updateDate</td>
				<td>$!BdCommon.getUserName($!item.updateId)</td>
			</tr>
		#end
    	</tbody>
    </table>
	</div>
<script>
createPagingToolbar('frm', $!form.pager.start, $!form.pager.limit, $!form.pager.totalCount);
</script>
</form>
<script>
function exportListToExcel(){
	jQuery("#user_action").val("exportExcel");
	jQuery("#frm").submit();
	jQuery("#user_action").val("");
}
jQuery(function(){
	checkTable('tbl', 'chkall', 'chk', true, changeButtons, function(index){
		window.location = "moveBill.vm?user_action=toEdit&headid=" + $n("chk")[index].value;
	});
	//初始化查询div common_query.js中定义默认已经引入
	jQuery("#btnAdd").click(function(){
		window.location = "moveBill.vm?user_action=toAdd&billType=" + jQuery("#billType").val() + "&jmFlag=" + jQuery("#jmFlag").val();
	});
	jQuery("#btnEdit").click(function(){
    	var index = getSelectIndex('chk');
    	if(index<0){
    		alert("请选择要修改/查看的记录");
    		return ;
    	}
		window.location = "moveBill.vm?user_action=toEdit&headid=" + $n("chk")[index].value;
	});
	jQuery("#btnDelete").click(deleteMoveBill);
	jQuery("#btnGenEstimate").click(generateEstimate);
	#if("1" == $!{form.billType})
	jQuery("#btnCancelMoveBill").click(cancelMoveBill);//撤销加盟调拨单
	#end
	changeButtons(false, 0);
	initQuery2('${queryCode}', "frm", 'btnQueryShow');
});
function showAllBill(formId){
	jQuery("#" + formId).submit();
}
function changeButtons(checked, index){
	jQuery("#btnEdit").attr("disabled", true);
	jQuery("#btnDelete").attr("disabled", true);
	jQuery("#btnGenEstimate").attr("disabled", true);
	jQuery("#btnCancelMoveBill").attr("disabled", true);
	
	var idxs = getSelectIndexs('chk');
	if(1 > idxs.length){
		return;
	}
	var deleteFlag = true;
	var genEstimateFlag = true;
	var cancelMoveBillFlag = true;
	for(var i=0;i<idxs.length;i++){
		index = idxs[i];
		if("1" != $n("status")[index].value || ("$!StringUtil.getOrgId($session)" != $n("outOrgId")[index].value)){
			deleteFlag = false;
		}
		if("26" != $n("status")[index].value){
			genEstimateFlag = false;
			cancelMoveBillFlag = false;
		}
		if("1" == jQuery("#billType").val() && "$!StringUtil.getOrgId($session)" != $n("outOrgId")[index].value){
			genEstimateFlag = false;
			cancelMoveBillFlag = false;
		}
		if("1" != jQuery("#billType").val() && "$!StringUtil.getOrgId($session)" != $n("inOrgId")[index].value){
			genEstimateFlag = false;
			cancelMoveBillFlag = false;
		}
	}
	if(deleteFlag){
		jQuery("#btnDelete").attr("disabled", false);
	}
	if(genEstimateFlag){
		jQuery("#btnGenEstimate").attr("disabled", false);
	}
	if(cancelMoveBillFlag){
		jQuery("#btnCancelMoveBill").attr("disabled", false);
	}
	if(1 == idxs.length){
		jQuery("#btnEdit").attr("disabled", false);
	}
}
function toEditPage(headid){
	window.location = "moveBill.vm?user_action=toEdit&headid=" + headid;
}
function viewEstimateBill(billType, extimateId){
	var options = {
		title : "查看结算单",
		contentType : 'iframe',
		iframeId : "purchaseWindowId",
		width : 900,
		height : 400,
		okBtnName : '确定',
		closeable:true,
		boxid:'winDiv',
		onok : function(box) {box.close();},
		oncancel : function(box) {box.close();}
	};
	var url = "";
	if(1 == billType){//调拨单
		url = jmCtxPath+"/jsp/bizframe/sys/reviewBill.jsp?system=jmscm&catalog=estimate&moduleId=sale&billId="
			+ extimateId + "&requestUrl=jmestimate/saleAction!findSaleHeadById.action";
	}else{
		url = jmCtxPath+"/jsp/bizframe/sys/reviewBill.jsp?system=jmscm&catalog=estimate&moduleId=return&billId="
			+ extimateId + "&requestUrl=jmestimate/returnAction!findReturnHeadById.action";
	}
	jQuery.weeboxs.open(url, options);
}
function deleteMoveBill(){
	var idxs = getSelectIndexs('chk');
	if(idxs.length<1){
		alert("请选择要删除的记录");
		return ;
	}
	confirm("确定删除?", function(){
		var headidArr = [];
    	for(var i=0;i<idxs.length;i++){
    		var index = idxs[i];
			headidArr.push($n("chk")[index].value);
		}
		MoveBillDwr.deleteMoveBill(headidArr, function(errMsg){
			if(errMsg){
				alert(errMsg);
			}else{
				alert("删除成功", function(){
					jQuery("#frm").submit();
				});
			}
		});
	});
}
/**
 * 生成加盟销售结算单或加盟退货结算单
 */
function generateEstimate(){
	var idxs = getSelectIndexs('chk');
	if(idxs.length<1){
		alert("请选择要生成结算单的记录");
		return ;
	}
	var billName = "1" == jQuery("#billType").val()?"加盟销售结算单":"加盟退货结算单";
	confirm("确定生成"+billName+"?", function(){
		var headidArr = [];
    	for(var i=0;i<idxs.length;i++){
    		var index = idxs[i];
			headidArr.push($n("chk")[index].value);
		}
        jQuery("#btnGenEstimate").attr("disabled", true);
        showLayer(true);
		MoveBillDwr.generateEstimate(headidArr, jQuery("#billType").val(), function(errMsg){
            showLayer(false);
			if(errMsg){
				alert(errMsg);
                jQuery("#btnGenEstimate").attr("disabled", false);
			}else{
				alert("生成"+billName+"成功", function(){
					jQuery("#frm").submit();
				});
			}
		});
	});
}
/**
 * 撤销加盟调拨单
 */
function cancelMoveBill(){
	var idxs = getSelectIndexs('chk');
	if(idxs.length<1){
		alert("请选择要撤销的记录");
		return ;
	}
	confirm("确定撤销?", function(){
		var headidArr = [];
    	for(var i=0;i<idxs.length;i++){
    		var index = idxs[i];
			headidArr.push($n("chk")[index].value);
		}
		MoveBillDwr.cancelMoveBill(headidArr, function(errMsg){
			if(errMsg){
				alert(errMsg);
			}else{
				alert("撤销成功", function(){
					jQuery("#frm").submit();
				});
			}
		});
	});
}
</script>