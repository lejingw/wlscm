	#set($modelCode = '09060701')
	#set($billCode = 'DB')
	#set($queryCode = 'DB02')
#elseif("2" == $!{form.billType})
	#set($modelCode = '09060801')
	#set($billCode = 'DH')
	#set($queryCode = 'DH02')
