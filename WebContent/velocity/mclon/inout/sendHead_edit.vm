<form id='frm' action="receive.vm" method="post">
	#set($sendHead = $!form.sendHead)
	#set($lines = $!form.lines)
	#if($StringUtil.isBlank($!sendHead.billno))
		#set($billno = "自动生成")
		#set($orgId = $StringUtil.getOrgId($session))
		#set($dodate = $DateUtil.getCurrentDate10())
		#set($statusName = "保存")
