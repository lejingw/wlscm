    <table class="control">
    	<tr>
			<td>
				<input type='button' value='新增' class='btn' id='btnAdd' $RightUtil.able($session, '08020601','1')/>
				<input type='button' value='删除' class='btn' id='btnDelete' $RightUtil.able($session, '08020601','2')/>
				##<input type='button' value='查询' class='btn' id='btnSearch' $RightUtil.able($session, '08020601','3')/>
				<input type='button' value='查询' class='btn' id='btnSearch2' $RightUtil.able($session, '08020601','3')/>
				<input type='checkbox' id='allBill' name="allBill" onchange="showAllBill(this)" #if("$!status" == "all")checked#end/>显示所有单据
